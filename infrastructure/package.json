        "diff": "cdk diff",
        "bootstrap": "cdk bootstrap"
    },
    "dependencies": {
        "@stock-rec/types": "workspace:*",
        "aws-cdk-lib": "^2.100.0",
        "constructs": "^10.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0"
    }
}