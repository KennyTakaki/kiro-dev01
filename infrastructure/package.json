{
    "name": "@stock-rec/infrastructure",
    "version": "1.0.0",
    "description": "AWS CDK infrastructure for stock recommendation system",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
